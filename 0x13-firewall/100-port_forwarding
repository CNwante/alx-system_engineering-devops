# Install UFW
sudo apt-get update
sudo apt-get install ufw

# Allow necessary ports
sudo ufw allow 80/tcp
sudo ufw allow 8080/ttcp

# Edit UFW configuration file to add port forwarding rule
sudo sed -i '1 i\*nat\n:PREROUTING ACCEPT [0:0]\n-A PREROUTING -p tcp --dport 8080 -j REDIRECT --to-port 80\nCOMMIT\n' /etc/ufw/before.rules

# Enable and reload UFW to apply the changes
sudo ufw enable
sudo ufw reload

# Verify the configuration (optional)
sudo netstat -lpn
curl -sI http://localhost:8080

